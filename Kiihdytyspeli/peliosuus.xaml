<Page
    x:Class="Kiihdytyspeli.peliosuus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiihdytyspeli"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="Peliosuus" FontSize="50" HorizontalAlignment="Center"/> 
        </StackPanel>
        <StackPanel Grid.Row="1" Background="Black"></StackPanel>
        <StackPanel Grid.Row="3" Background="Black"></StackPanel>
    </Grid>
</Page>
