<Page
    x:Class="Kiihdytyspeli.peliosuus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiihdytyspeli"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="returnGarageButton" 
                Content="Takaisin" 
                HorizontalAlignment="Left" 
                Margin="1100,90,0,0" 
                VerticalAlignment="Top"
                Click="returnGarageButton_Click" Background="#FFA6D5F9" FontFamily="Papyrus" FontWeight="Bold"/>

        <Button x:Name="playAgainButton" 
                Content="Pelaa uudestaan" 
                HorizontalAlignment="Left" 
                Margin="900,90,0,0" 
                VerticalAlignment="Top"
                Click="playAgainButton_Click" Background="#FFA6D5F9" FontFamily="Papyrus" FontWeight="Bold"/>

        <Canvas
            x:Name="GameCanvas"
            Width="1280"
            Height="720"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Canvas.Background>

                <ImageBrush Stretch="None" 
                        ImageSource="Assets/road.jpg">

                </ImageBrush>
            </Canvas.Background>
        </Canvas>
        <TextBlock x:Name="TulosTextBlock" HorizontalAlignment="Left" Margin="427,77,0,0" TextWrapping="Wrap" Text="Voittaja" VerticalAlignment="Top" Foreground="#FF90EC0B" Height="129" Width="319" FontSize="32" SelectionHighlightColor="#FF0D0E0D"/>

    </Grid>
</Page>
