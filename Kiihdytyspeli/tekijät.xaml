<Page
    x:Class="Kiihdytyspeli.tekijät"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kiihdytyspeli"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="takaisinbutton" 
                Content="Takaisin" 
                HorizontalAlignment="Left" 
                Margin="1100,90,0,0" 
                VerticalAlignment="Top"
                Click="takaisinbutton_Click" FontFamily="Papyrus" FontWeight="Bold" Background="#FFA6D5F9"/>
        
        <TextBlock x:Name="textBlock" 
                   HorizontalAlignment="Left" 
                   Margin="445,232,0,0" 
                   TextWrapping="Wrap" 
                   Text="Tämän huikeen pelin on valmistanut ohjelmoija nerot!!!"
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="1.11,0.919"/>
    </Grid>
</Page>
